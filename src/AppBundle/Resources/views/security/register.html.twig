{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body_title %}Register{% endblock %}

{% block stylesheets %}
    <style>
        td {
            border: 0;
        }
    </style>
{% endblock %}

{% block body %}
    {{ form_start(form) }}
    <table>
        <tr>
            <td>{{ form_label(form.login) }}</td>
            <td>{{ form_widget(form.login) }}</td>
        </tr>
        <tr>
            <td>{{ form_label(form.plainPassword.first) }}</td>
            <td>{{ form_widget(form.plainPassword.first) }}</td>
        </tr>
        <tr>
            <td>{{ form_label(form.plainPassword.second) }}</td>
            <td>{{ form_widget(form.plainPassword.second) }}</td>
        </tr>
        <tr>
            <td></td>
            <td>{{ form_widget(form.save) }}</td>
        </tr>
    </table>
    {{ form_end(form) }}
{% endblock %}