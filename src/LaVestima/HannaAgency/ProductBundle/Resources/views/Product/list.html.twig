{% extends '@Infrastructure/base.html.twig' %}

{% block title %}Product List{% endblock %}

{% block actionBar %}
    <a href="{{ path('product_new') }}">
        <div class="button action-bar-button">
            New Product
        </div>
    </a>
{% endblock %}

{% block content %}
    <table class="entity-list">
        <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Size</th>
            <th>Availability</th>
        </tr>
    {% for productSize in productsSizes %}
        <tr>
            <td>{{ productSize.idProducts.name }}</td>
            <td>{{ productSize.idProducts.idCategories.name }}</td>
            <td>{{ productSize.idSizes.name }}</td>
            <td>{{ productSize.availability }}</td>
            <td class="entity-list-cell">
                <a href="{{ path('product_show', {'pathSlug': productSize.idProducts.pathSlug}) }}">
                    <i class="fa fa-chevron-right" aria-hidden="true"></i>
                </a>
            </td>
        </tr>
    {% endfor %}

