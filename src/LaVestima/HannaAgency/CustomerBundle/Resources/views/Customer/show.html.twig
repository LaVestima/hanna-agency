{% extends '@Infrastructure/base.html.twig' %}

{% block title %}Customer{% endblock %}

{% block content %}
    <div class="module-box">
        <div class="module-box-title">Personal Information</div>
        <div class="module-box-content">
            <table class="entity-show-table">
                <tr>
                    <td>Full Name</td>
                    <td>{{ customer.firstName }} {{ customer.lastName }}</td>
                </tr>
                <tr>
                    <td>Email</td>
                    <td>{{ customer.email }}</td>
                </tr>
                <tr>
                    <td>Phone</td>
                    <td>{{ customer.phone }}</td>
                </tr>
                <tr>
                    <td>ID</td>
                    <td>{{ customer.identificationNumber }}</td>
                </tr>
                <tr>
                    <td>Address</td>
                    <td>
                        {{ customer.street }}<br>
                        {{ customer.postalCode }} {{ customer.idCities.name }}<br>
                        {{ customer.idCountries.name }}
                    </td>
                </tr>
            </table>
        </div>
    </div>

    {% if customer.idUsers is not null %}
    <div class="module-box">
        <div class="module-box-title">User Information</div>
        <div class="module-box-content">
            <table class="entity-show-table">
                <tr>
                    <td>Login</td>
                    <td>
                        {{ customer.idUsers.login }}
                    </td>
                </tr>
                <tr>
                    <td>Email</td>
                    <td>
                        {{ customer.idUsers.email }}
                    </td>
                </tr>
            </table>
        </div>
    </div>
    {% endif %}

    {% if orders is not empty %}
    <div class="module-box">
        <div class="module-box-title">Order History</div>
        <div class="module-box-content">
            <table class="entity-list">
                <tr>
                    <th>Date Placed</th>
                    <th>Status</th>
                </tr>
                {% for order in orders %}
                    <tr>
                        <td>
                            {{ order.datePlaced | date('d.m.Y') }}
                        </td>
                        <td>
                            {{ order.status }}
                        </td>
                        <td>
                            <a href="{{ path('order_show', {'pathSlug': order.pathSlug}) }}">
                                <i class="fa fa-chevron-right" aria-hidden="true"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>
    {% endif %}

    {% if invoices is not empty %}
    <div class="module-box">
        <div class="module-box-title">Invoice History</div>
        <div class="module-box-content">
            <table class="entity-list">
                <tr>
                    <th>Name</th>
                    <th>Date Issued</th>
                </tr>
                {% for invoice in invoices %}
                    <tr>
                        <td>{{ invoice.name }}</td>
                        <td>{{ invoice.dateIssued | date('d.m.Y') }}</td>
                        <td>
                            <a href="{{ path('invoice_show', {'pathSlug': invoice.pathSlug}) }}">
                                <i class="fa fa-chevron-right" aria-hidden="true"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>
    {% endif %}
{% endblock %}