{% extends '@Infrastructure/base.html.twig' %}

{% block title %}Order summary{% endblock %}

{% block content %}
    Selected products: <br>
    {% for product in selectedProducts %}
        {{ product.name }}<br>
    {% endfor %}
    {% for quantity in selectedQuantities %}
        {% if quantity > 0 %}
            {{ quantity }}<br>
        {% endif %}
    {% endfor %}

    {{ form_start(form) }}
    {{ form_end(form) }}
{% endblock %}