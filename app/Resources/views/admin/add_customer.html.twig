{% extends 'base.html.twig' %}

{% block title %}Add Customer{% endblock %}

{% block body_title %}Add Customer{% endblock %}

{% block stylesheets %}
    <style>
        .add-entity-body {
            width: 100%;

        }
        .add-entity-body tr td {
            padding: 5px;
        }
        .add-entity-body tr:nth-child(even) {
            /*background: #DDDDDD;*/
        }
        .add-entity-body tr td:nth-child(1) {
            width: 30%;
            text-align: right;
        }
        .add-entity-body tr td:nth-child(2) {
            width: 30%;
        }
        .add-entity-body tr td:nth-child(3) {
            width: 30%;
        }
        .add-entity-body tr td input {
            /*width: 400px;*/
            width: 100%;
        }
        .add-entity-body tr td select {
            /*width: 400px;*/
            width: 100%;
        }
    </style>
{% endblock %}

{% block body %}//TODO: check data correctness on the fly with js
    {{ form_start(form) }}
    <table class="add-entity-body">
        {% for columnName in ['firstName', 'lastName', 'gender', 'companyName', 'vat', 'idCountries', 'idCities', 'street', 'postalCode', 'email', 'phone', 'idCurrencies', 'defaultDiscount', 'idUsers'] %}
            <tr>
                <td>{{ form_label(form[columnName]) }}{% if form[columnName].vars.required %} <span style="color:red">*</span>{% endif %}</td>
                <td>{{ form_widget(form[columnName]) }}</td>
                <td class="add-entity-body-data-error" id="add-entity-body-data-error-{{ columnName }}">{{ form_errors(form[columnName]) }}</td>
            </tr>
        {% endfor %}
        <tr>
            <td>{{ form_widget(form['add']) }}</td>
            <td class="hidden">{{ form_widget(form['delete'], {'disabled': 'true', 'label': '.'}) }}</td>
        </tr>
    </table>
    {{ form_end(form) }}

{% endblock %}


