{% extends 'base.html.twig' %}

{% block title %}{{ product.name }}{% endblock %}

{% block content %}
    <link  href="https://cdnjs.cloudflare.com/ajax/libs/fotorama/4.6.4/fotorama.css" rel="stylesheet">
    <style>
        .grid-container {
            display: grid;
            grid-template-columns: 2fr 3fr 1fr;
            grid-template-areas:
                    'images description price'
        ;

            grid-gap: 10px;
            padding: 10px;
        }
        .grid-container > div {
            background-color: #ffffff;
            padding: 20px 20px;
            border-radius: 5px;
        }
        .grid-images {
            grid-area: images;
        }
        .grid-description {
            grid-area: description;
        }
        .grid-price {
            grid-area: price;
        }
    </style>

    <div class="grid-container">
        <div class="grid-images">
            <div class="fotorama"
                 data-width="100%"
{#                 data-height="600"#}
                 data-allowfullscreen="true"
                 data-loop="true"
                 data-arrows="true"
                 data-click="true"
                 data-swipe="true"
                 data-trackpad="true"
            >
                {% for image in product.productImages %}
                    <img src="{{ asset(image.filePath) }}" width="200" hidden>
                {% endfor %}
            </div>
        </div>
        <div class="grid-description">
            <h3 style="margin: 0.5em 0;">{{ product.name }}</h3>
            <span style="color: #777;"><b>{{ product.store.shortName }}</b></span><br>
            <span>{{ product.description }}</span><br>
            <span>Full Product Specification</span><br>
            {% for productParameter in product.productParameters %}
                <span style="color: #aaa;">{{ productParameter.parameter.name }}</span> {{ productParameter.value }} {{ productParameter.parameter.unit }}<br>
            {% endfor %}
        </div>
        <div class="grid-price">â‚¬ {{ product.price }}</div>
    </div>



