                        )) }}
                    </div>
                </div>
                <a href="{{ path('homepage_homepage') }}">
                    <div class="top-bar-item">
{#                        <i class="fas fa-globe"></i>#}
                        <i class="fas fa-ambulance"></i>
{#                        <span>EUbuy</span>#}
                        <span>EuEuEuEuBuy</span>
                    </div>
                </a>
