                        <i class="fas fa-globe"></i>
                        <span class="tooltiptext">???</span>
                    </div>
{#                </a>#}
                <a href="{{ path('cart_home') }}">
                    <div class="top-bar-item tooltip">
                        <i class="fas fa-shopping-cart"></i>
{#                        ({{ cartTotal }})#}
                        <span class="tooltiptext">Cart</span>
                        <span style="background: #ff6666; position: absolute; top: 0; right: -10px; border-radius: 5px; padding: 0.125em 0.25em; min-width: 1em; text-align: center; font-size: 16px;">{{ cartTotal }}</span>
                    </div>
                </a>
{#                <a href="{{ path('conversation_list') }}">#}
